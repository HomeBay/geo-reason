{
  "name": "geo-reason",
  "version": "0.4.0",
  "description": "Reason types and functions for working with GeoJSON",
  "scripts": {
    "build": "bsb -make-world",
    "clean": "bsb -clean-world",
    "cleanbuild": "npm run clean && npm run build",
    "test": "jest --coverage",
    "cleantest": "npm run clean && npm run build && npm run test",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "watch": "bsb -make-world -w",
    "start": "npm run watch"
  },
  "author": "Michael Martin-Smucker",
  "license": "MIT",
  "homepage": "https://github.com/homebay/geo-reason",
  "bugs": "https://github.com/homebay/geo-reason/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/homebay/geo-reason.git"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.9",
    "bs-abstract": "^0.17.0",
    "bs-decode": "^0.9.0",
    "bs-platform": "^5.2.1",
    "coveralls": "^3.0.7",
    "relude": "^0.31.0"
  },
  "peerDependencies": {
    "bs-abstract": "^0.17.0",
    "bs-decode": "^0.9.0",
    "relude": "^0.31.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "./test"
    ],
    "testMatch": [
      "**/test/*.js",
      "**/test/geojson/*.js"
    ]
  }
}
